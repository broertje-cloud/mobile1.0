<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mobile1._0.Page6">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="logo_200x200.png" />
            <Label Text="People you want to msg" HorizontalTextAlignment="Center" TextColor="Black" FontSize="36"/>
            <Button x:Name="HomeButton" Text="Home" Clicked="HomeButton_Clicked_1" FontSize="Large" VerticalOptions="CenterAndExpand" HorizontalOptions="Center"/>
            <Entry Text="" Placeholder="Phone Number" x:Name="EntryNumber"/>
            <Entry Text="" Placeholder="Message" x:Name="EntryMessage"/>
            <Button Text="Send" Clicked="Button_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>